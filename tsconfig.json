{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ES2015",
    "module": "esnext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
